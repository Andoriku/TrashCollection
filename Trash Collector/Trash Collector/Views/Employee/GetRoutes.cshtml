@model Trash_Collector.Models.GetRoutesViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "GetRoutes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetRoutes</h2>

@using (Html.BeginForm("GetRoutes", "Employee", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.todaysRoute, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.todaysRoute, new { @class = "form-control" })
        </div>
        <p> </p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Update" />
            </div>
        </div>
    </div>
}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
