@model Trash_Collector.Models.LogDayViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "GetRoutes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetRoutes</h2>

@using (Html.BeginForm("LogDay", "Employee", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <p>What day would you like to log is finished? Note: completing this action will result in billing to all customers for the day. If you log a day that you have not completed, please contact the system Admin.</p>
    <div class="form-group">
        @Html.LabelFor(m => m.dayToLog, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.dayToLog, new { @class = "form-control" })
        </div>
        <p> </p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Log Day" />
            </div>
        </div>
    </div>
}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
